function [b, a] = band_pass(Fc1, Fc2, sampleRate, filterType)
% This function returns the numerator and denominator of the bandpass filter
% @filterCla

Fm = sampleRate/2;
firOrder = 100;
iirOrder = 4;

if(filterType == 0)
    [b, a] = fir1(firOrder, [Fc1 Fc2]/Fm, 'bandpass');
    [b, a] = eqtflength(b, a);
elseif(filterType == 1)
    [b, a] = butter(iirOrder, [Fc1 Fc2]/Fm, 'bandpass');
    [b, a] = eqtflength(b,a);
end

end

